<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hwua.dao.ITeacherDao">
	<!-- 实体类属性和数据库表字段对应 -->
	<resultMap type="Teacher" id="teacherMap">
		<id property="tid" column="t_id"/>
		<result property="tname" column="t_name"/>
	</resultMap>
	<!-- sql片段 -->
	<sql id="teacherColumns">${alias}.t_id,${alias}.t_name</sql>
	
	<!-- 查询所有教师信息 -->
	<select id="findAllTeachers" resultMap="teacherMap">
	 select <include refid="teacherColumns"><property name="alias" value="t"/></include>
	 from teacher t 
	</select>
</mapper>